<Window x:Class="MhwModManager.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MhwModManager"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="SMM - Settings" Height="150" Width="320">
    <StackPanel>
        <WrapPanel>
            <TextBlock Text="Name :" Margin="5" />
            <TextBox Name="nameTB" MinWidth="200" MaxWidth="250" Margin="0,5" />
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text="Category :" Margin="5" />
            <ComboBox Name="categCB" Width="180" Margin="0,5" SelectionChanged="categCB_SelectionChanged" />
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Right">
            <Button Name="validateBTN" Content="Validate" Click="validateBTN_Click" Width="55" Padding="5" Margin="5" Style="{StaticResource ValidateButton}" />
            <Button Name="cancelBTN" Content="Cancel" Click="cancelBTN_Click" Width="55" Padding="5" Margin="5" Style="{StaticResource CancelButton}" />
        </WrapPanel>
    </StackPanel>
</Window>